{
	"name": "project-structure-creation",
	"displayName": "Create project structure",
	"description": "Create filese/folder structure from templates for any project",
	"icon": "assets/react-icon-29.png",
	"version": "4.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/Vitalii-Volianyk/VSC-React_component"
	},
	"publisher": "VitaliiVilianyk",
	"engines": {
		"vscode": "^1.65.2"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/src/components/**"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "structure_creation.editStructure",
				"title": "Edit project structure"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "react-component-structure.editStructure",
					"group": "navigation",
					"title": "New ReactJS Emotion component"
				}
			]
		},
		"configuration": {
			"title": "Structure-creation",
			"properties": {
				"structure_creation.templatesPath": {
					"type": "string",
					"default": "",
					"description": "The path to use for templates."
				}
			}
		}
	},
	"scripts": {
		"pretest": "npm run lint",
		"publish": "vsce package",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.65.2",
		"@vscode/test-electron": "^2.2.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"@vscode/vsce": "^2.22.0"
	}
}
